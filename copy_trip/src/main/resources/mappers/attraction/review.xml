<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--IReviewDAO mybatis-->
<mapper namespace="com.ssafy.live.model.dao.attraction.IReviewDAO">

    <resultMap type="Review" id="reviewResultMap">
        <result property="attractionsNo" column="attractions_no"/>
        <result property="userNo" column="user_no"/>
        <result property="rating" column="rating"/>
        <result property="comment" column="comment"/>
        <result property="releaseDate" column="release_date"/>
    </resultMap>

    <insert id="addReview" parameterType="Review">
        INSERT INTO review (attractions_no, rating, comment, user_no, release_date)
        VALUES (#{attractionsNo}, #{rating}, #{comment}, #{userNo}, #{releaseDate})
    </insert>

    <select id="getReviewsByAttraction" parameterType="int" resultType="Review" resultMap="reviewResultMap">
        SELECT *
        FROM review
        WHERE attractions_no = #{attractionsNo}
    </select>

    <update id="updateReview" parameterType="Review">
        UPDATE review
        SET rating = #{rating}, comment = #{comment}, release_date = #{releaseDate}
        WHERE attractions_no = #{attractionsNo} AND user_no = #{userNo}
    </update>

    <delete id="deleteReview">
        DELETE FROM review
        WHERE attractions_no = #{attractionsNo} AND user_no = #{userNo}
    </delete>


</mapper>
