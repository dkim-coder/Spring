<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--IBoardDAO mybatis-->
<mapper namespace="com.ssafy.live.model.dao.board.IBoardDAO">

    <resultMap type="User" id="boardResultMap">
        <id property="no" column="no"/>
        <result property="userNo" column="user_no"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="releaseDate" column="release_date"/>
    </resultMap>

    <insert id="addBoard" parameterType="Board">
        INSERT INTO board (title, content, release_date, user_no)
        VALUES (#{title}, #{content}, #{releaseDate}, #{userNo})
    </insert>

    <select id="getAllBoards" resultType="Board" resultMap="boardResultMap">
        SELECT *
        FROM board
    </select>

    <update id="updateBoard" parameterType="Board">
        UPDATE board
        SET title = #{title}, content = #{content}, releaseDate = #{releaseDate}
        WHERE no = #{no}
    </update>

    <delete id="deleteBoard" parameterType="int">
        DELETE FROM board
        WHERE no = #{no}
    </delete>


</mapper>
