<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--ICommentDAO mybatis-->
<mapper namespace="com.ssafy.live.model.dao.board.ICommentDAO">

    <resultMap type="User" id="commentResultMap">
        <result property="no" column="board_no"/>
        <result property="userNo" column="user_no"/>
        <result property="content" column="content"/>
        <result property="releaseDate" column="release_date"/>
    </resultMap>

    <insert id="addComment" parameterType="Comment">
        INSERT INTO comment (board_no, user_no, content, release_date)
        VALUES (#{boardNo}, #{userNo}, #{content}, #{releaseDate})
    </insert>

    <select id="getCommentsByBoard" parameterType="int" resultType="Comment" resultMap="commentResultMap">
        SELECT *
        FROM comment
        WHERE board_no = #{boardNo}
    </select>

    <update id="updateComment" parameterType="Comment">
        UPDATE comment
        SET content = #{content}, release_date = #{releaseDate}
        WHERE board_no = #{boardNo} AND user_no = #{userNo}
    </update>

    <delete id="deleteComment">
        DELETE FROM comment
        WHERE board_no = #{boardNo} AND user_no = #{userNo}
    </delete>


</mapper>
