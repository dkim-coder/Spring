        update member set
        name=#{name}, password=#{password}, role = #{role} 
        where email=#{email}
    </update>

    <delete id="delete">
        delete from member 
        where mno=#{mno}
    </delete>

    <update id="updateProfile">
        update member 
        set profile=#{profile} 
        where email=#{email}
    </update>

